<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundblue"
    tools:context=".Cevsen">

    <Button
        android:id="@+id/cevsenTr"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="205dp"
        android:background="@drawable/custom_button"
        android:onClick="cevsenTr"
        android:text="Türkçe Cevşen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cevsenAr"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/custom_button"
        android:onClick="cevsenAr"
        android:text="Arapça Cevşen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cevsenTr" />
</androidx.constraintlayout.widget.ConstraintLayout>